func factorial(n) do
  var result := 1
  loop var counter := n do
    result *= counter
    counter -=1
  exit when counter=0
    print(result)
  end
  return result
end

print(factorial(10))

func fac(n) do
  var result := 1
  loop var counter := 1 do
    result *= counter
    counter +=1
    exit when counter>n
    print(result)
  end
  return result
end

print(fac(10))



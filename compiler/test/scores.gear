
let scores := [8.3, 7.7, 9.0, 5.4, 1,2]
var sum := 0
for var score in scores do
  sum += score
end

if let average := sum / scores.count where average > 6.0 then
  print('You passed!')
elseif average>5.0 and average<=6.0 then
  print('You need to work harder!')
else
  print('You failed!')
end

